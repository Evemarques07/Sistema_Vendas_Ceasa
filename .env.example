# Configurações do Banco de Dados
DATABASE_URL=mysql+pymysql://vendas_user:vendas_pass@localhost:3306/vendas_ceasa
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=vendas_user
DATABASE_PASSWORD=vendas_pass
DATABASE_NAME=vendas_ceasa

# Configurações JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações da API
API_V1_STR=/api
PROJECT_NAME=Sistema Vendas CEASA API
VERSION=1.0.0
DESCRIPTION=API para Sistema de Controle de Pedidos de Frutas, Legumes e Verduras

# Configurações de Upload
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880  # 5MB

# Configurações do Google Drive (rclone)
RCLONE_CONFIG_PATH=/app/rclone.conf
GDRIVE_REMOTE_NAME=gdrive
GDRIVE_FOLDER_ID=your-google-drive-folder-id

# Configurações de Desenvolvimento
DEBUG=True
TESTING=False
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:5174", "https://alanceasavendas.web.app"]

# Configurações do Docker
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=vendas_ceasa
MYSQL_USER=vendas_user
MYSQL_PASSWORD=vendas_pass

# Timezone
TIMEZONE=America/Sao_Paulo
